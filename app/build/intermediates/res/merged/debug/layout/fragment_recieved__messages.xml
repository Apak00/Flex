<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_Recieved_messages"
    android:orientation="vertical"
    tools:context="com.example.apak.flancer.fragments.Recieved_Messages"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/Recieved_messages_rv"
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:layout_weight="1.08"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_browse_messages" />

    <Button
        android:id="@+id/button_browse_messages"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/com_facebook_blue"
        android:text="Browse Messages" />

</RelativeLayout>
